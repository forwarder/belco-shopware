<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="belco_connector_plugin.belco_subscriber" class="BelcoConnectorPlugin\Subscriber\BelcoSubscriber">
            <argument>%belco_connector_plugin.plugin_name%</argument>
            <argument>%belco_connector_plugin.plugin_dir%</argument>

            <argument type="service" id="belco_connector_plugin.belco_connector" />
            <argument type="service" id="shopware.plugin.cached_config_reader" />

            <tag name="shopware.event_subscriber" />
        </service>

        <service id="belco_connector_plugin.belco_connector" class="BelcoConnectorPlugin\Components\BelcoConnector" />
    </services>
</container>
